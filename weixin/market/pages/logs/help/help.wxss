/* pages/logs/help/help.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.body {
  width: 100%;
}

.help {
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
  background: white;
}

.left {
  width: 250rpx;
  min-width: 250rpx;
  height: auto;
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 2rpx solid #efefef;
}

.left image {
  width: 16rpx;
  height: 26rpx;
  margin-left: 40rpx;
}

.right view {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #333;
  text-indent: 20rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  border-bottom: 2rpx solid #efefef;
}

.right view:last-child {
  border: none;
}
