/**index.wxss**/
.banner {
  width: 100%;
  height: 360rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.entry {
  width: 100%;
  padding: 4rpx 0 32rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.entry view {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 28rpx;
}

.entry image {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 8rpx;
}

.entry text {
  font-size: 24rpx;
  color: #333;
}

.notice {
  width: 100%;
  height: 120rpx;
  padding: 22rpx 0 22rpx 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 20rpx solid #f5f5f5;
}

.notice .left {
  margin-right: 28rpx;
}

.notice .left image {
  width: 64rpx;
  height: 68rpx;
}

.notice .right {
  flex-grow: 1;
  display: flex;
  align-items: center;
  height: 150%;
}

.content swiper-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.content view {
  width: 56rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  background: #f5a623;
  border-radius: 16rpx;
  margin-right: 20rpx;
  font-size: 20rpx;
  color: white;
}
