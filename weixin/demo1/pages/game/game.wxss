/* pages/game/game.wxss */

.container {
  width: 100%;
  height: 100%;
}

.canvas_area {
  width: 100%;
  height: 100%;
  z-index: 10;
  bottom: 40px;
  overflow: auto;
}

canvas {
  width: 100%;
  height: 100%;
}

.canvas_tools {
  width: 100%;
  height: 40px;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 100;
  display: flex;
  background: #ffffff;
  justify-content: space-around;
  align-items: center;
}

.canvas_tools view {
  width: 12%;
  height: 100%;
  border-radius: 50%;
}
.box1{
  background: red;
}
.box2{
  background: black;
}
.box3{
  background: #cc0033;
}
.box4{
  background: #ff9900;
}
.box5{
  background: greenyellow;
}