/* pages/logs/order/order.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.body {
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
  height: 80rpx;
  overflow-x: auto;
  display: flex;
  justify-content: space-around;
  background: white;
  border-top: 2rpx solid #f5f5f5;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.header view {
  height: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #000;
  position: relative;
}

.header .active {
  color: #f2c461;
}

.header .active::before {
  content: "";
  display: block;
  width: 100%;
  height: 8rpx;
  background: #f2c461;
  position: absolute;
  bottom: 0;
  left: 0;
}

.content {
  width: 100%;
  height: 100%;
  padding-top: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.display {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.list {
  width: 100%;
  background: white;
  margin-top: 20rpx;
}

.top {
  width: 100%;
  height: 64rpx;
  padding: 0 32rpx;
  font-size: 24rpx;
  color: #999;
  border-bottom: 1rpx solid #ededed;
  box-sizing: border-box;
}

.top text:nth-of-type(2) {
  font-size: 28rpx;
  color: #f58f23;
}

.center {
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  margin-top: 34rpx;
  margin-bottom: 36rpx;
}

.center .left {
  width: 164rpx;
  height: 164rpx;
  min-width: 164rpx;
  margin-right: 18rpx;
  border: 2rpx solid #ededed;
}

.center image {
  width: 100%;
  height: 100%;
}

.center .right {
  flex-grow: 1;
  font-size: 28rpx;
  color: #333;
}

.center .right view {
  display: flex;
}

.center .right view:nth-of-type(1) {
  margin-bottom: 16rpx;
  justify-content: space-between;
}

.center .right view:nth-of-type(1) text:nth-of-type(1) {
  display: inline-block;
  max-width: 382rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.center .right view:nth-of-type(2) text:nth-of-type(1) {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 34rpx;
}

.footer {
  width: 100%;
  height: 68rpx;
  padding: 0 32rpx;
  justify-content: flex-end;
  box-sizing: border-box;
  border-top: 1rpx solid #ededed;
}

.footer view {
  padding: 6rpx 48rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #333;
  border-radius: 26rpx;
  margin-left: 26rpx;
}

.main {
  width: 100%;
  height: 100%;
  padding-top: 80rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
}

.main image {
  width: 140rpx;
  height: 224rpx;
  margin-bottom: 58rpx;
}

.main button {
  width: 440rpx;
  height: 88rpx;
  background-image: linear-gradient(-130deg, #f8e2a3 0%, #e1b350 95%);
  border-radius: 4rpx;
  margin-top: 44rpx;
  font-size: 32rpx;
  color: #333;
  border: none;
  outline: none;
}
